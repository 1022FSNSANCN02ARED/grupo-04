
 <%- include('../partials/head') %>
 <title>Product-form</title>
    <body>
        <!-- Header -->
        <%- include('../partials/header') %>
        <!-- /Header -->

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">
                        Formulario de creación de productos
                    </h2>
                </div>
            </div>
            <div class="col-12">
                <form
                    action="/mainRouter"
                    method="post"
                    
                >
                    <div class="row product-detail">
                        <div class="col-12 col-md-6">
                            <label for="name" class="form-label"
                                >id del producto:</label
                            >
                            <input
                                type="text"
                                id="date"
                                name="name"
                                placeholder=""
                                class="form-input"
                                name="id"
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label"
                                >Nombre:</label
                            >
                            <input
                                type="text"
                                id="price"
                                name="price"
                                placeholder="Ej: 5678"
                                class="form-input"
                                name="name"
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="discount" class="form-label"
                                >Descripción:</label
                            >
                            <input
                                type="text"
                                id="discount"
                                name="discount"
                                placeholder="Ej: 15"
                                class="form-input"
                                name="description"
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="image" class="form-label">Image:</label>
                            <input
                                type="file"
                                id="image"
                                name="image"
                                class="form-input"
                                accept="image/png,image/jpeg"
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label"
                                >Categoría:</label
                            >
                            <select
                                name="category"
                                id="category"
                                class="form-input"
                            >
                                <option value="">Elegí</option>
                                <option value="in-sale">En oferta</option>
                                <option value="visited">
                                    Últimos agregados
                                </option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label"
                                >Precio:</label
                            >
                            <textarea
                                name="description"
                                id="description"
                                class="form-input"
                                name="price"
                            ></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="buy-now-button">
                                Guardar producto
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /todos los productos -->

        <!-- footer -->
    
        <!-- /footer -->
    </body>
</html>
<%- include('../partials/head') %>
 <title>Product-form</title>
    <body>
        <!-- Header -->
        <%- include('../partials/header',{title: 'Editando: ' + product.name}) %>
        <!-- /Header -->

        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title">
                        Estás editando: <i><%= product.name %> </i>
                    </h2>
                </div>
            </div>
            <div class="col-12">
                <form
                      action="/products/<%= product.id %>?_method=put"
                    method="POST"  
                >
                    <div class="row product-detail">
                        
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label"
                                >Nombre:</label
                            >
                            <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Ej: 5678"
                                class="form-input"
                                value="<%= product.name %>"
                               
                                
                            
                            />
                        </div>
                  
                              <div class="col-12 col-md-6">
                            <label for="size" class="form-label"
                                >Size:</label
                            >
                            <input
                                type="text"
                                id="size"
                                name="size"
                                placeholder="L"
                                class="form-input"
                                value="<%= product.size %>"
                             
                            />
                        </div>
                              <div class="col-12 col-md-6">
                            <label for="colour" class="form-label"
                                >Colour:</label
                            >
                            <input
                                type="text"
                                id="colour"
                                name="colour"
                                placeholder="Ej:azul"
                                class="form-input"
                                value="<%= product.colour %>"
                               
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="image" class="form-label">Image:</label>
                            <input
                                type="file"
                                id="image"
                                name="image"
                                class="form-input"
                                accept="image/png,image/jpeg"
                                value="<%= product.image %>"
                               
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label "
                                >Categoría:</label
                            >
                            <select
                                name="category"
                                id="category"
                                class="form-input"
                            >
                                <option value="">Elegí</option>
                                <option value="in-sale" <%= product.category=="in-sale" ? "selected" : "" %>>En oferta</option>
                                <option value="visited" <%= product.category=="visited" ? "selected" : "" %>>
                                    Últimos agregados
                                </option>
                            </select>
                            
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label"
                                >Precio:</label
                            >
                            <input
                                type="text"
                                id="price"
                                name="price"
                                placeholder="Ej:1500"
                                class="form-input"
                                 value="<%= product.price %>"
                               
                            />
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label"
                                >Descripcion:</label
                            >
                            <textarea
                                name="description"
                                id="description"
                                class="form-input"
                                name="price"
                            ><%= product.description %></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="buy-now-button">
                                Guardar producto
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /todos los productos -->

        <!-- footer -->
        <%- include('../partials/footer') %>
        <!-- /footer -->
    </body>
</html>
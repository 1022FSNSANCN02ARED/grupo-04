<!DOCTYPE html>
<html lang="es">
<%- include('../../partials/head') %>
 <title>Edicion-form</title>
    <body>
        <!-- Header -->
        <%- include('../../partials/header',{title: 'Editando: ' + product.nombre}) %>
        <!-- /Header -->
 <div class="container products-wrapper product-detail">
       
            <div class="col-12 box1">
                <form
                    action="/products/<%= product.id %>?_method=put"
                    method="POST" 
                    enctype="multipart/form-data"
                >
                    <div class="row product-detail">
                        
                           <div class="row">
                <div class="col-12">
                    <h2 class="products-title">
                        FORMULARIO EDICION DE PRODUCTO
                    </h2>
                </div>
                 <h2 class="products-title">
                        Estás editando: <i><%= product.nombre %> </i>
                    </h2>
            </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label"
                                >Nombre:</label
                            >
                            <input
                                type="text"
                                id="name"
                                name="name"
                                placeholder="Ej: 5678"
                                class="form-input"
                                value="<%= product.nombre %>"
        
                            
                            />
                        </div>
                  
                              <div class="col-12 col-md-6">
                            <label for="size" class="form-label"
                                >Size:</label
                            >
                            <input
                                type="text"
                                id="size"
                                name="size"
                                placeholder="Especifique un talle si es necesario"
                                class="form-input"
                             
                             
                            />
                        </div>
                              <div class="col-12 col-md-6">
                            <label for="colour" class="form-label"
                                >Colour:</label
                            >
                            <input
                                type="text"
                                id="colour"
                                name="colour"
                                placeholder="Ej:azul"
                                class="form-input"
                            
                               
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="imagen" class="form-label">Imagen:</label>
                            <input
                                type="file"
                                id="imagen"
                                name="imagen"
                                class="form-input"
                                accept="imagen/png/jpeg"
                                src="/images/<%= product.imagen %>"
                               
                               
                            />
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="category" class="form-label "
                                >Categoría:</label
                            >
                            <select
                                name="category"
                                id="category"
                                class="form-input"
                            >
                                <option value="">Elegí</option>
                                 <option value="decoracion" <%= product.categoria=="decoracion" ? "selected" : "" %>>Decoracion</option>
                                <option value="hogar" <%= product.categoria=="hogar" ? "selected" : "" %>>
                                    Hogar
                                </option>
                                <option value="indumentaria" <%= product.categoria=="indumentaria" ? "selected" : "" %>>
                                  Indumentaria
                                </option>
                            </select>
                            
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="price" class="form-label"
                                >Precio:</label
                            >
                            <input
                                type="text"
                                id="price"
                                name="price"
                                placeholder="Ej:1500"
                                class="form-input"
                                 value="<%= product.precio %>"
                          
                               
                            />
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label"
                                >Descripcion:</label
                            >
                              <textarea
                                name="description"
                                id="description"
                                class="form-input"
                            ><%= product.descripcion %></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="edit"> <span> Guardar Producto</span>
</button>
                           
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- /todos los productos -->

        <!-- footer -->
        <%- include('../../partials/footer') %>
        <!-- /footer -->
    </body>
</html>



